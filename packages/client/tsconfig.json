{
	"extends": "./tsconfig.alias.json",
	"compilerOptions": {
		"outDir": "build",
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["DOM", "ESNext"],
		"moduleResolution": "node",
		"noResolve": false,
		"noImplicitAny": false,
		"removeComments": false,
		"sourceMap": true,
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"keyofStringsOnly": true,
		"esModuleInterop": true,
		"importsNotUsedAsValues": "preserve",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"typeRoots": [
			"node_modules/@types",
			"src/@types",
			"../../node_modules/@types"
		]
	},
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"configs",
		"acceptance-tests",
		"webpack",
		"jest",
		"internals",
		"__test__"
	],
	"include": ["./src/**/*", "@types"]
}
